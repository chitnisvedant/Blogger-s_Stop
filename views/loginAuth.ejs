<%- include('partials/headerAuth') %>

<a href="/"><img src="/images/return.png" alt=""></a>
<div class="container mt-5">
  <h1>Login</h1>

  <div class="row">
    <div class="col-sm-8">
      <div class="card">
        <div class="card-body">

          <!-- Makes POST request to /login route -->
          <form action="/login" method="POST">
            <div class="form-group">
              <label for="email">Email</label>
              <input type="email" class="form-control" name="username" autofocus autocomplete="off">
            </div>
            <div class="form-group">
              <label for="password">Password</label>
              <input type="password" class="form-control" name="password" autocomplete="off">
            </div>
            <button type="submit" class="btn btn-dark">Login</button> <span>or</span>
            <a href='/register'><button type="button" class="btn btn-light" name="button">Register</button></a>
          </form>
        </div>
      </div>
      <p class="notHome">*Invalid email or password redirects the user to authentication home page.</p>
    </div>
  </div>
</div>

<%- include('partials/footerAuth') %>
